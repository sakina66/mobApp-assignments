<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#07ce1b"
tools:context=".Main3Activity">

<Button
    android:id="@+id/button2"
    android:layout_width="227dp"
    android:layout_height="58dp"
    android:text="Password"
    app:layout_constraintBottom_toTopOf="@+id/textView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.516"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button"
    app:layout_constraintVertical_bias="0.253" />

<TextView
    android:id="@+id/textView"
    android:layout_width="242dp"
    android:layout_height="45dp"
    android:layout_marginStart="124dp"
    android:layout_marginLeft="124dp"
    android:text="Dont have an account?"
    android:textColor="#fff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.485"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.958" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="139dp"
    android:layout_height="141dp"
    android:layout_marginStart="1500dp"
    android:layout_marginLeft="1500dp"
    android:layout_marginTop="1500dp"
    android:layout_marginEnd="1500dp"
    android:layout_marginRight="1500dp"
    android:layout_marginBottom="1500dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.585"
    app:srcCompat="@drawable/icon" />

<Button
    android:id="@+id/button"
    android:layout_width="227dp"
    android:layout_height="58dp"
    android:text="Email"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView"
    app:layout_constraintVertical_bias="0.166" />

<Button
    android:id="@+id/button3"
    android:layout_width="137dp"
    android:layout_height="60dp"
    android:background="#1a5b20"
    android:text="SIGNIN"
    android:textColor="#fff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button2"
    app:layout_constraintVertical_bias="0.312" />

</androidx.constraintlayout.widget.ConstraintLayout>